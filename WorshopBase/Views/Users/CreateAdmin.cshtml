@model WorshopBase.ViewModels.UsersViewModels.CreateUserAdminViewModel

@{
    ViewBag.Title = "Добавление пользователя-администратора";
}

<h2>Добавление нового пользователя-администратора</h2>
<form asp-action="CreateAdmin" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Email" class="control-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="Password" class="control-label">Пароль</label>
            <input type="text" asp-for="Password" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</form>
<a asp-action="Index">Назад</a>