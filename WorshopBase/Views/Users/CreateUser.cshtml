@model WorshopBase.ViewModels.UsersViewModels.CreateUserViewModel

<h2>Добавление нового пользователя</h2>

<form method="post" asp-controller="Users" asp-action="CreateUser">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="PasswordConfirm"></label><br />
        <input asp-for="PasswordConfirm" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input type="submit" value="Добавить" />
    </div>
</form>
<a asp-action="Index">Назад</a>