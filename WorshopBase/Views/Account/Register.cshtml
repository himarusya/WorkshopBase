@model WorshopBase.ViewModels.UsersViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="container">
        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-xs-4">
                <label asp-for="PasswordConfirm" class="control-label"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
        </div>

        <div>
            <input class="btn btn-default" type="submit" value="Регистрация" />
        </div>
    </div>
</form>