@model WorshopBase.ViewModels.UsersViewModels.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <form method="post" asp-controller="Account" asp-action="Login" class="form-horizontal"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <h2 left:20%; style="margin-left: 350px;" ;>Вход</h2>
                <label class="control-label col-sm-2" asp-for="Email">Email:</label>
                <div class="col-sm-5">
                    <input type="email" asp-for="Email" class="form-control" id="email" placeholder="Введите Email" name="email">
                </div>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" asp-for="Password">Пароль:</label>
                <div class="col-sm-5">
                    <input type="password" class="form-control" asp-for="Password" id="pwd" placeholder="Введите пароль">
                </div>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <div class="checkbox">
                        <label><input type="checkbox" asp-for="RememberMe" name="remember">Запомнить?</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-5">
                    <button type="submit" class="btn btn-default">Вход</button>
                    <a class="btn btn-default" asp-controller="Account" asp-action="Register">Регистрация</a>
                </div>
            </div>
        </form>
    </div>

</body>
</html>
