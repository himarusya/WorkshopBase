@model WorshopBase.ViewModels.PartsViewModels.CreatePartViewModel

@{
    ViewBag.Title = "Добавление детали";
}

<h2>Добавление детали</h2>

<form asp-action="Create">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="partName" class="control-label">Название</label>
            <input type="text" asp-for="partName" class="form-control" />
            <label asp-for="price" class="control-label">Цена</label>
            <input type="text" asp-for="price" class="form-control" />
            <label asp-for="descriptionPart" class="control-label">Описание</label>
            <input type="text" asp-for="descriptionPart" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>

</form>

<a asp-action="Index" style="float: right;">Назад</a>