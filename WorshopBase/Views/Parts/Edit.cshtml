@model WorshopBase.ViewModels.PartsViewModels.EditPartViewModel
@{
    ViewData["Title"] = "Редактирование детали" + Model.partName;
}

<h2>Редактирование детали @Model.partName</h2>

<form asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="partName" class="control-label">Название</label>
            <input type="text" asp-for="partName" class="form-control" />
            <label asp-for="price" class="control-label">Цена</label>
            <input type="text" asp-for="price" class="form-control" />
            <label asp-for="descriptionPart" class="control-label">Описание</label>
            <input type="text" asp-for="descriptionPart" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>

</form>

<a asp-action="Index" style="float: right;">Назад</a>
