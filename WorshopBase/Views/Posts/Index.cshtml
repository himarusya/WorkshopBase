@model IEnumerable<WorshopBase.Models.Post>
@{
    ViewData["Title"] = "Управление должностями и сотрудниками";
}

<h2>Управление должностями и сотрудниками</h2>

<table class="table table-hover table-bordered text-center" id="tblemps" width="100px" >
    <thead>
        <tr>
            <th  style="text-align: center;">
                Название должности
            </th>
            <th  style="text-align: center;">
                Описание
            </th>
            <th  style="text-align: center;">
                <a class="btn btn-primary" asp-action="Create">Добавить должность</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.HiddenFor(modelitem=>item.postID)
                    <span id="employeename">@item.postName</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descriptionPost)
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@item.postID" method="post">
                        <a class="btn btn-sm btn-warning" asp-action="Workers" asp-route-id="@item.postID">Сотрудники</a>
                        <a class="btn btn-sm btn-success glyphicon glyphicon-pencil" asp-action="Edit" asp-route-id="@item.postID"></a>
                        <button type="submit" class="btn btn-sm btn-danger glyphicon glyphicon-trash"></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

