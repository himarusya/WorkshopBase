@model WorshopBase.ViewModels.PostsViewModels.CreatePostViewModel

@{
    ViewBag.Title = "Добавление должности";
}

<h2>Добавление должности</h2>

<form asp-action="Create">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="postName" class="control-label">Название должности</label>
            <input type="text" asp-for="postName" class="form-control" />
            <label asp-for="descriptionPost" class="control-label">Описание</label>
            <input type="text" asp-for="descriptionPost" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>

</form>

<a asp-action="Index" style="float: right;">Назад</a>