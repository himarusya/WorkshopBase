@model WorshopBase.ViewModels.PostsViewModels.EditPostViewModel
@{
    ViewData["Title"] = "Изменение должности" ;
}

<h2>Изменение должности </h2>

<form asp-action="Edit">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="postName" class="control-label">Название должности</label>
            <input type="text" asp-for="postName" class="form-control" />
            <label asp-for="descriptionPost" class="control-label">Описание</label>
            <input type="text" asp-for="descriptionPost" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>

</form>

<a asp-action="Index" style="float: right;">Назад</a>
