@model WorshopBase.ViewModels.WorkersViewModels.CreateWorkerViewModel
@{
    ViewData["Title"] = "Добавить сотрудника с должностью " + ViewBag.postName;
}

<h2>Добавить сотрудника с должностью @ViewBag.postName</h2>

<form asp-action="CreateWorker">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="postID" type="hidden" value="@ViewBag.postID" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="fioWorker" class="control-label">Фамилия</label>
            <input type="text" asp-for="fioWorker" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="dateOfEmployment" class="control-label">Дата устройства</label>
            <input asp-for="dateOfEmployment" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="dateOfDismissal" class="control-label">Дата увольнения</label>
            <input asp-for="dateOfDismissal" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="salary" class="control-label">Оклад</label>
            <input asp-for="salary" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>

</form>

