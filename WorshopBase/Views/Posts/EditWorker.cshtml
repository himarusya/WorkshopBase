@model WorshopBase.ViewModels.WorkersViewModels.EditWorkerViewModel
@{
    ViewData["Title"] = "Изменение сотрудника ";
}

<h2>Изменение сотрудника </h2>

<form asp-action="EditWorker">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />
    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="fioWorker" class="control-label">Фамилия</label>
            <input type="text" asp-for="fioWorker" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="dateOfEmployment" class="control-label">Дата устройства</label>
            <input asp-for="dateOfEmployment" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="dateOfDismissal" class="control-label">Дата увольнения</label>
            <input asp-for="dateOfDismissal" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="salary" class="control-label">Оклад</label>
            <input asp-for="salary" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>

</form>