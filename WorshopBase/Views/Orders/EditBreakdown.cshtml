@model WorshopBase.ViewModels.BreakdownsViewModel.EditBreakdownViewModel
@{
    ViewData["Title"] = "Изменение сотрудника ";
}

<h2>Изменение сотрудника </h2>

<form asp-action="EditBreakdown">

    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="Id" type="hidden" />

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="partID" class="control-label">Деталь</label>
            <div id="g">
                <select asp-for="partID" class="form-control">
                    @foreach (var item in ViewBag.parts)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="orderID" class="control-label">Ремонтируемый автомобиль</label>
            <div id="g">
                <select asp-for="orderID" class="form-control">
                    @foreach (var item in ViewBag.orders)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <label asp-for="workerID" class="control-label">Сотрудник</label>
            <div id="g">
                <select asp-for="workerID" class="form-control">
                    @foreach (var item in ViewBag.workers)
                    {
                        <option value="@item.Value">@item.Key</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-xs-4">
            <input type="submit" value="Изменить" class="btn btn-default" />
        </div>
    </div>

</form>